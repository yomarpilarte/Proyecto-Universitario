@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Gastos Empleados";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold">Gastos Empleados</h4>
            <p class="text-muted">Gestiona tus solicitudes de reembolso de gastos de viaje</p>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalNuevoGasto">
            + Nuevo Gasto
        </button>
    </div>

    <!-- Resumen -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">Total Aprobado</h6>
                    <h3 class="fw-bold">C$ 2800.00</h3>
                    <p class="text-secondary small mb-0">1 gasto</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">Pendiente de Revisión</h6>
                    <h3 class="fw-bold">C$ 1500.00</h3>
                    <p class="text-secondary small mb-0">1 gasto</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">Total Gastos</h6>
                    <h3 class="fw-bold">3</h3>
                    <p class="text-secondary small mb-0">Este mes</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <ul class="nav nav-tabs mb-4" id="filtros">
        <li class="nav-item"><a class="nav-link active" data-filter="todas" href="#">Todos (3)</a></li>
        <li class="nav-item"><a class="nav-link" data-filter="pendiente" href="#">Pendientes (1)</a></li>
        <li class="nav-item"><a class="nav-link" data-filter="aprobado" href="#">Aprobados (1)</a></li>
        <li class="nav-item"><a class="nav-link" data-filter="rechazado" href="#">Rechazados (1)</a></li>
    </ul>

    <!-- Lista de gastos -->
    <div id="listaGastos">
        <!-- Pendiente -->
        <div class="card mb-3 shadow-sm border-0 gasto" data-estado="pendiente">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h5 class="fw-bold mb-1">Viaje a cliente en Granada</h5>
                    <p class="text-muted mb-2">Reunión con cliente potencial para presentación de productos</p>
                    <div class="text-secondary small">
                        <span><i class="bi bi-currency-dollar"></i> C$ 1500.00</span> ·
                        <span><i class="bi bi-calendar-event"></i> 9 de enero, 2025</span> ·
                        <span><i class="bi bi-bus-front"></i> Transporte</span>
                    </div>
                </div>
                <span class="badge bg-warning text-dark align-self-start mt-2">Pendiente</span>
            </div>
        </div>

        <!-- Aprobado -->
        <div class="card mb-3 shadow-sm border-0 gasto" data-estado="aprobado">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h5 class="fw-bold mb-1">Hotel en León</h5>
                    <p class="text-muted mb-2">Alojamiento durante conferencia de ventas</p>
                    <div class="text-secondary small">
                        <span><i class="bi bi-currency-dollar"></i> C$ 2800.00</span> ·
                        <span><i class="bi bi-calendar-event"></i> 8 de enero, 2025</span> ·
                        <span><i class="bi bi-house-door"></i> Alojamiento</span>
                    </div>
                </div>
                <span class="badge bg-success align-self-start mt-2">Aprobado</span>
            </div>
        </div>

        <!-- Rechazado -->
        <div class="card mb-3 shadow-sm border-0 gasto" data-estado="rechazado">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h5 class="fw-bold mb-1">Viáticos a Managua</h5>
                    <p class="text-muted mb-2">Solicitud de viáticos para capacitación</p>
                    <div class="text-secondary small">
                        <span><i class="bi bi-currency-dollar"></i> C$ 1200.00</span> ·
                        <span><i class="bi bi-calendar-event"></i> 5 de enero, 2025</span> ·
                        <span><i class="bi bi-car-front"></i> Transporte</span>
                    </div>
                </div>
                <span class="badge bg-danger align-self-start mt-2">Rechazado</span>
            </div>
        </div>
    </div>
</div>

<!-- Modal Nuevo Gasto -->
<div class="modal fade" id="modalNuevoGasto" tabindex="-1" aria-labelledby="modalNuevoGastoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalNuevoGastoLabel">Nuevo Gasto de Empleado</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formNuevoGasto">
                    <div class="mb-3">
                        <label class="form-label">Título</label>
                        <input type="text" class="form-control" placeholder="Ej. Viaje a cliente en León" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <textarea class="form-control" rows="3" placeholder="Detalle del gasto" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Monto (C$)</label>
                        <input type="number" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Categoría</label>
                        <select class="form-select">
                            <option>Transporte</option>
                            <option>Alojamiento</option>
                            <option>Alimentación</option>
                            <option>Otros</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Fecha</label>
                        <input type="date" class="form-control" required>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Guardar Gasto</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // --- Filtro de gastos ---
    document.querySelectorAll('#filtros .nav-link').forEach(link => {
        link.addEventListener('click', e => {
            e.preventDefault();
            document.querySelectorAll('#filtros .nav-link').forEach(l => l.classList.remove('active'));
            link.classList.add('active');

            const filtro = link.dataset.filter;
            document.querySelectorAll('.gasto').forEach(card => {
                if (filtro === 'todas' || card.dataset.estado === filtro) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    });

    // --- Modal: limpiar formulario al cerrar ---
    const modal = document.getElementById('modalNuevoGasto');
    modal.addEventListener('hidden.bs.modal', () => {
        document.getElementById('formNuevoGasto').reset();
    });
</script>