@model List<Viajes.Models.DTO.ReporteSolictudDTO>

@{
    ViewData["Title"] = "Solicitudes de Viaje";
}

<h2>Solicitudes de Viaje</h2>

<!-- Formulario de filtros -->
<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-3">
            <label>Empleado</label>
            <input type="number" name="idEmpleado" class="form-control" />
        </div>
        <div class="col-md-3">
            <label>Departamento</label>
            <select name="idDepartamento" class="form-control">
                <option value="">--Todos--</option>
                <option value="5">Ventas</option>
                <option value="6">Operaciones</option>
                <option value="7">Recursos Humanos</option>
                <option value="8">Contabilidad y Finanzas</option>
                <option value="9">Mantenimiento</option>
                <option value="10">Tecnología y Sistema</option>
                <option value="11">Gerencia General</option>
            </select>
        </div>
        <div class="col-md-3">
            <label>Estado</label>
            <select name="idEstado" class="form-control">
                <option value="">--Todos--</option>
                <option value="3">Pendiente</option>
                <option value="4">Aprobado</option>
                <option value="5">Rechazado</option>
            </select>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</form>

<!-- Tabla de solicitudes -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Solicitud</th>
            <th>Empleado</th>
            <th>Departamento</th>
            <th>Motivo</th>
            <th>Destino</th>
            <th>Presupuesto</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.IdSolicitudViaje</td>
                <td>@s.IdEmpleado</td>
                <td>@s.Departamento</td>
                <td>@s.Motivo</td>
                <td>@s.Destino</td>
                <td>@s.PresupuestoEstimado.ToString("C")</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("ReporteSolicitud", "Reportes", new { id = s.IdSolicitudViaje })">
                        Ver Reporte
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>



